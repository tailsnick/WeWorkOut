@model IEnumerable<WeWorkOut.Models.ExerciseRecord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Exercise</th>
            <th>Submit Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmitDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExerciseRecordID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExerciseRecordID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExerciseRecordID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
